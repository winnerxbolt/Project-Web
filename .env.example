# Environment Variables for Poolvilla Pattaya

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Security
CRON_SECRET=your-cron-secret-here
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook App Configuration  
# Get these from: https://developers.facebook.com/apps/
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Email Provider Selection (development, gmail, sendgrid, ses)
EMAIL_PROVIDER=development

# SendGrid (Optional)
SENDGRID_API_KEY=

# AWS SES (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# --------------------------------------------
# Payment Gateway - Omise (Thailand)
# Get these from: https://dashboard.omise.co/
# Test keys start with pkey_test_ and skey_test_
# Live keys start with pkey_live_ and skey_live_
NEXT_PUBLIC_OMISE_PUBLIC_KEY=pkey_test_xxxxx
OMISE_SECRET_KEY=skey_test_xxxxx

# Payment Gateway - Stripe (International)
# Get these from: https://dashboard.stripe.com/apikeys
# Test keys start with pk_test_ and sk_test_
# Live keys start with pk_live_ and sk_live_
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# Webhook Secrets (Get from provider dashboards)
OMISE_WEBHOOK_SECRET=your_omise_webhook_secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Rate Limiting
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_ONLINE_PAYMENT=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_REVIEWS=true

# Development Only
NEXT_PUBLIC_DEBUG=false
NEXT_TELEMETRY_DISABLED=1
